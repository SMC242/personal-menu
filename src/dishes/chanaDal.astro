---
import chanaDalImage from "@assets/chana-dal.jpg";
import RecipePage from "@components/recipePage.astro";
import type { RecipeTags } from "@types/index.d.ts";
import Tags from "@components/tags.astro";
import AttributedImage from "@components/attributedImage.astro";

export const tags: RecipeTags = {
  cuisine: "North Indian",
  spiciness: "Medium",
  dishType: "Main",
};
---

<RecipePage>
  <li slot="overview"><Tags tags={tags} /></li>
  <p slot="summary">Chana dal is a split chickpea curry</p>
  <AttributedImage
    slot="image"
    attribution="Image credit: https://www.indianhealthyrecipes.com/"
    src={chanaDalImage}
    alt="Chana dal in a bowl"
    width={400}
    height={400}
  />
</RecipePage>
